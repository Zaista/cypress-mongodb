{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["cypress"]
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}
